log_format fastcgi 'NORMAL:  RPR:$realpath_root FSN:$fastcgi_script_name FPI:$fastcgi_path_info';
log_format fastcgi-catch 'CATCH: RPR:$realpath_root FSN:$fastcgi_script_name FPI:$fastcgi_path_info';

server {
  listen 80;
  server_name _ default;

  client_max_body_size 16M;

  root /web/app/current/public;

  location ~ [^/]\.php(/|$) {
    try_files /dev/null @engine;
  }

  location / {
    index index.html index.php;
    try_files $uri @engine-catch;
  }

  location @engine {
    if (!-f $realpath_root$fastcgi_script_name) { return 404; }
    fastcgi_split_path_info ^(.+?\.php)(/.*)$;
    include fastcgi_params;
    fastcgi_param HTTP_PROXY "";
    fastcgi_param PATH_INFO $fastcgi_path_info;
    fastcgi_param REALPATH_ROOT $realpath_root;
    fastcgi_param SCRIPT_FILENAME $realpath_root/index.php;
    fastcgi_pass php-engine:9000;
    access_log        /var/log/nginx/fastcgi.log fastcgi;
  }

  location @engine-catch {
    include fastcgi_params;
    fastcgi_param HTTP_PROXY "";
    fastcgi_param PATH_INFO $fastcgi_path_info;
    fastcgi_param REALPATH_ROOT $realpath_root;
    fastcgi_param SCRIPT_FILENAME $realpath_root/index.php;
    fastcgi_pass php-engine:9000;
    access_log        /var/log/nginx/fastcgi.log fastcgi-catch;
  }

}
